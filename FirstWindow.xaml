<Window x:Class="AutoDesignConnect.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoDesignConnect"
        mc:Ignorable="d"
        Title="Автоматическое подключение MaterialDesign" Height="450" Width="800" ResizeMode="NoResize" Icon="/free-icon-font-settings-3917058.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Label Content="Внимание" Margin="5" Foreground="#DDEF2A2A" FontFamily="Gilroy" HorizontalAlignment="Center" FontSize="32"></Label>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,122,0,0" TextWrapping="Wrap" Text="Создайте проект перед началом подключения. Инструкция будет далее" VerticalAlignment="Top" FontFamily="Gilroy" FontSize="22"/>
        <StackPanel Margin="5" Height="auto" Background="White" VerticalAlignment="Bottom" Grid.Row="2">
            <Button Margin="5,0,5,0" Padding="5" Click="Button_Click">Далее</Button>
            <Button Padding="5" Margin="5" Click="Button_Click_1">Выход</Button>
        </StackPanel>
    </Grid>
</Window>
